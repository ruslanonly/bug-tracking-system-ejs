<style>
    .header-auth-user__wrapper {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .header-auth-user__info {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: end;
        gap: 1px;
    }

    .header-auth-user__info label[for='email'] {
        color: var(--gray-400);
        font-size: 13px;
    }

    .header-auth-user__avatar {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 40px;
        width: 40px;
        background-color: var(--gray-200);
        text-align: center;
        font-size: 25px;
        font-weight: 600;
        color: var(--gray-300);
        border-radius: 50%;
    }

    .header-auth-user__avatar--admin {
        border: solid 2px var(--violet-400);
    }

    .header-auth-user__logout {
        height: 15px;
        width: 15px;
        cursor: pointer;
    }

    .header-auth-user__logout svg {
        width: 100%;
        height: 100%;
        fill: var(--gray-400);
    }

    .header-auth-user__logout:hover svg {
        fill: var(--gray-600);
    }
</style>
