    $('#header-auth-user .header-auth-user__avatar span').text(<%- user.name %>[0])

    const logout = () => {
        deleteCookie('Auth-Token')
        window.location.href = '/'
    }

    $('#header-auth-user__logout-button').on('click', function() {
        logout()
    })
</script>