    <div class="header-auth-user__info">
        <label for="name"><%- user.login %></label>
        <label for="email"><%- user.email %></label>
    </div>
    <div class="header-auth-user__avatar <% if (user?.is_admin) { %> header-auth-user__avatar--admin <% } %>">
        <span></span>
